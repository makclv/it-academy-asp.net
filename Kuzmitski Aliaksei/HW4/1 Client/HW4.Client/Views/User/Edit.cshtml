            @Html.EnumDropDownListFor(model => model.UserTitle, "Please select", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserTitle, "", new { @class = "text-danger" })
        </div>
    </div>

