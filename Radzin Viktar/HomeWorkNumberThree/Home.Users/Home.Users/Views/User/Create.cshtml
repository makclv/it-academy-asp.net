            @Html.EnumDropDownListFor(model => model.Title, "Please Select")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Country.Name, "Country", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Country.Name, Home.Users.Models.StaticCountryList.CountryListItems(), "Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.City.Name, "City", new { @class = "control-label col-md-2" })
