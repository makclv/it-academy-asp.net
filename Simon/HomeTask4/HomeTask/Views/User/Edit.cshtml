@using HomeTask.Models.ViewModel
@model EditViewModel

<form method="post" action="/User/EditUser">
	@Html.ValidationSummary()
	<style>
		.field-validation-error, .validation-summary-errors {
			color: red;
			font-size: 12px;
			margin-left: 14px;
		}

		.input-validation-error {
			border: 1px solid red;
		}
	</style>

	<input type="number" name="Id" value=@Model.Id hidden />
	<div>
		@Html.LabelFor(x => x.FirstName, new { @class = "col-md-2 control-label" })
		@Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
		@Html.ValidationMessageFor(x => x.FirstName)
	</div>
	<div>
		@Html.LabelFor(x => x.LastName, new { @class = "col-md-2 control-label" })
		@Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
		@Html.ValidationMessageFor(x => x.LastName)
	</div>

	<div>
		@Html.LabelFor(x => x.Email, new { @class = "col-md-2 control-label" })
		@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
		@Html.ValidationMessageFor(x => x.Email)
	</div>
	<div>
		@Html.LabelFor(x => x.Phone, new { @class = "col-md-2 control-label" })
		@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
		@Html.ValidationMessageFor(x => x.Phone)
	</div>
	<div>
		@Html.LabelFor(x => x.Comments, new { @class = "col-md-2 control-label" })
		@Html.TextBoxFor(x => x.Comments, new { @class = "form-control" })
		@Html.ValidationMessageFor(x => x.Comments)
	</div>
	<div>
		@Html.LabelFor(x => x.Title, new { @class = "col-md-2 control-label" })
		@Html.DropDownListFor(m => m.Title,
   new SelectList(Enum.GetValues(typeof(Title))), new { @class = "form-control" })
	</div>
	<div>
		@Html.LabelFor(x => x.Countrys, new { @class = "col-md-2 control-label" })
		@Html.DropDownListFor(m => m.CountryId,
		new SelectList(Model.Countrys, "CountryId", "CountryName"), new { @class = "form-control" })
	</div>
	<div>
		@Html.LabelFor(x => x.Citys, new { @class = "col-md-2 control-label" })
		@Html.DropDownListFor(m => m.CityId,
	   new SelectList(Model.Citys, "CityId", "СityName"), new { @class = "form-control" })
	</div>
	<div>
		<input type="submit" class="btn btn-default" value="Edit" />
	</div>
</form>
@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
}

